<!--등록 버튼 옵션 아이콘+텍스트하기 위한 레이아웃 정의-->
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:padding="16dp">

    <LinearLayout
        android:id="@+id/keyboard_registration_layout"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/ingredient_register_click_selector"
        android:clickable="true"
        android:focusable="true"
        android:orientation="horizontal"
        android:padding="8dp">

        <ImageView
            android:id="@+id/keyboard_icon"
            android:layout_width="35dp"
            android:layout_height="35dp"
            android:src="@drawable/keyboard_registration_icon" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="8dp"
            android:layout_marginTop="8dp"
            android:gravity="center_vertical"
            android:text="Keyboard Registration" />
    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_marginTop="0dp"
        android:background="#B6B6B6" />

    <LinearLayout
        android:id="@+id/voice_registration_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/ingredient_register_click_selector"
        android:clickable="true"
        android:focusable="true"
        android:orientation="horizontal"
        android:padding="8dp">

        <ImageView
            android:id="@+id/voice_icon"
            android:layout_width="35dp"
            android:layout_height="35dp"
            android:src="@drawable/voice_registration_icon" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="8dp"
            android:layout_marginTop="8dp"
            android:gravity="center_vertical"
            android:text="Voice Registration" />
    </LinearLayout>
</LinearLayout>
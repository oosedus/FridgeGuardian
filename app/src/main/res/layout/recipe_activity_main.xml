<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#EEEEEE">

    <com.google.android.material.appbar.AppBarLayout
        android:id="@+id/appBarLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:elevation="4dp"
        android:theme="@style/ThemeOverlay.AppCompat.Dark.ActionBar">

        <androidx.appcompat.widget.Toolbar
            android:id="@+id/toolbar"
            android:layout_width="match_parent"
            android:layout_height="?attr/actionBarSize"
            android:background="#FFFFFFFF"
            android:textAlignment="center"
            app:contentInsetStart="25dp"
            app:titleTextColor="#FF000000" />
    </com.google.android.material.appbar.AppBarLayout>

    <com.google.android.material.bottomnavigation.BottomNavigationView
        android:id="@+id/navigation"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:background="#FFFFFFFF"
        app:itemIconTint="#FF000000"
        app:itemTextColor="#FF000000"
        app:menu="@menu/bottom_navigation_menu" />


    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/rectangle1"
        android:layout_width="225dp"
        android:layout_height="56dp"
        android:layout_below="@+id/appBarLayout"
        android:layout_alignParentStart="true"
        android:layout_alignParentEnd="true"
        android:layout_marginStart="80dp"
        android:layout_marginTop="140dp"
        android:layout_marginEnd="80dp"
        android:background="@drawable/recipe_search_with_dish_name_button"
        android:textColor="#000000"
        android:text="search with dish name" />

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/rectangle2"
        android:layout_width="225dp"
        android:layout_height="56dp"
        android:layout_below="@+id/rectangle1"
        android:layout_alignParentStart="true"
        android:layout_alignParentEnd="true"
        android:layout_marginStart="80dp"
        android:layout_marginTop="80dp"
        android:layout_marginEnd="80dp"
        android:background="@drawable/recipe_search_with_my_ingredient_button"
        android:textColor="#000000"
        android:text="search with my ingredient" />

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/rectangle3"
        android:layout_width="225dp"
        android:layout_height="56dp"
        android:layout_below="@+id/rectangle2"
        android:layout_alignParentStart="true"
        android:layout_alignParentEnd="true"
        android:layout_marginStart="80dp"
        android:layout_marginTop="80dp"
        android:layout_marginEnd="80dp"
        android:background="@drawable/recipe_bookmark_button"
        android:textColor="#000000"
        android:text="bookmark" />

    <ToggleButton
        android:id="@+id/toggleButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_marginTop="106dp"
        android:text="ToggleButton" />


</RelativeLayout>


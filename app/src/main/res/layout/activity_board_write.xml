<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:tools="http://schemas.android.com/tools"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">
<LinearLayout
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="c_board.BoardWriteActivity">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="60dp"
                android:background="@color/c_maincolor">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:gravity="center"
                    android:text="Posting Page"
                    android:textColor="@color/c_cstatus"
                    android:textSize="28dp"
                    android:textStyle="bold" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="0.5dp"
                android:background="#000000"
                />

            <EditText
                android:id="@+id/c_titleArea_Rname"
                android:layout_margin="25dp"
                android:layout_width="match_parent"
                android:layout_height="60dp"
                android:hint="Write Recipe's Name\n(ex: InsunnyChicken)"
                android:background="@android:color/transparent"
                />

            <LinearLayout
                android:layout_marginBottom="10dp"
                android:layout_width="match_parent"
                android:layout_height="0.5dp"
                android:background="#000000"
                android:layout_marginRight="20dp"
                android:layout_marginLeft="20dp"
                />

            <EditText
                android:id="@+id/c_content_Ringredient"
                android:layout_margin="25dp"
                android:layout_width="match_parent"
                android:layout_height="60dp"
                android:hint="Write Recipe's Ingredient\n(ex: Egg, Milk, Pork etc)"
                android:background="@android:color/transparent"/>

            <LinearLayout
                android:layout_marginBottom="10dp"
                android:layout_width="match_parent"
                android:layout_height="0.5dp"
                android:background="#000000"
                android:layout_marginRight="20dp"
                android:layout_marginLeft="20dp"
                />

            <EditText
                android:id="@+id/c_content_Rcontent"
                android:layout_margin="25dp"
                android:layout_width="match_parent"
                android:layout_height="60dp"
                android:hint="Write Recipe's content\n(ex: Step, Time, Tools etc)"
                android:background="@android:color/transparent"/>

            <LinearLayout
                android:layout_marginBottom="10dp"
                android:layout_width="match_parent"
                android:layout_height="0.5dp"
                android:background="#000000"
                android:layout_marginRight="20dp"
                android:layout_marginLeft="20dp"
                />

            <ImageView
                android:id="@+id/c_content_RimageArea"
                android:layout_width="wrap_content"
                android:layout_height="159dp"
                android:layout_marginTop="18dp"
                android:layout_marginRight="200dp"
                android:src="@drawable/c_p_plusbtn" />

            <Button
                android:id="@+id/c_writeBtn_upload"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="90dp"
                android:background="@drawable/background_radius"
                android:backgroundTint="@color/c_cstatus"
                android:text="Upload"
                android:textColor="@color/c_maincolor"
                android:textSize="25dp"
                android:textStyle="bold" />
        </LinearLayout>
    </ScrollView>
</LinearLayout>
</layout>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:padding="16dp">

    <!-- Category -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:layout_marginBottom="4dp"
            android:background="#66CDC9C9"
            android:layout_marginRight="20dp"
            android:text="Category"
            android:textSize="20dp" />

        <Spinner
            android:id="@+id/spinnerCategory"
            android:layout_width="wrap_content"
            android:layout_height="48dp"
            android:textSize="20dp" />

    </LinearLayout>


    <!-- Name -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="8dp"
            android:layout_marginBottom="4dp"
            android:background="#66CDC9C9"
            android:layout_marginRight="50dp"
            android:text="Name"
            android:textSize="20dp" />

        <EditText
            android:id="@+id/editTextName"
            android:layout_width="wrap_content"
            android:layout_height="48dp"
            android:hint="Input Your Ingredient Name"
            android:textSize="20dp"
            android:inputType="text" />

    </LinearLayout>

    <!-- Quantity -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="8dp"
            android:layout_marginBottom="4dp"
            android:background="#66CDC9C9"
            android:layout_marginRight="25dp"
            android:text="Quantity"
            android:textSize="20dp" />

        <Spinner
            android:id="@+id/spinnerQuantity"
            android:layout_width="wrap_content"
            android:layout_height="48dp"
            android:textSize="20dp" />


    </LinearLayout>

    <!-- Expiration Date -->

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="8dp"
            android:layout_marginBottom="4dp"
            android:background="#66CDC9C9"
            android:layout_marginRight="16dp"
            android:text="Expiration Date"
            android:textSize="20dp" />

        <EditText
            android:id="@+id/editTextExpirationDate"
            android:layout_width="wrap_content"
            android:layout_height="48dp"
            android:drawableEnd="@drawable/calander_icon"
            android:drawablePadding="15dp"
            android:focusable="false"
            android:hint="YY-MM-DD"
            android:inputType="text" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:layout_marginRight="25dp"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/buttonRemove"
            android:layout_width="48dp"
            android:layout_height="48dp"
            android:layout_marginStart="16dp"
            android:clickable="true"
            android:contentDescription="삭제"
            android:focusable="true"
            android:padding="8dp"
            android:src="@drawable/ingredient_remove_button" />

        <ImageView
            android:id="@+id/buttonAddMore"
            android:layout_width="48dp"
            android:layout_height="48dp"
            android:clickable="true"
            android:contentDescription="추가"
            android:focusable="true"
            android:padding="8dp"
            android:src="@drawable/ingredient_addmore_button" />
    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="#B6B6B6"
        android:layout_marginTop="8dp" />
</LinearLayout>
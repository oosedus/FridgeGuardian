<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="#EEEEEE">

    <com.google.android.material.appbar.AppBarLayout
        android:id="@+id/appBarLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:theme="@style/ThemeOverlay.AppCompat.Dark.ActionBar"
        android:elevation="4dp">

        <androidx.appcompat.widget.Toolbar
            android:id="@+id/toolbar"
            android:layout_width="match_parent"
            android:layout_height="?attr/actionBarSize"
            android:background="#FFFFFFFF"
            android:textAlignment="center"
            app:contentInsetStart="25dp"
            app:titleTextColor="#FF000000" />
    </com.google.android.material.appbar.AppBarLayout>

    <com.google.android.material.bottomnavigation.BottomNavigationView
        android:id="@+id/navigation"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="0dp"
        android:background="#FFFFFFFF"
        app:itemIconTint="#FF000000"
        app:itemTextColor="#FF000000"
        app:menu="@menu/bottom_navigation_menu" />

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="425dp"
        android:layout_above="@+id/navigation"
        android:layout_below="@+id/appBarLayout"
        android:layout_alignParentStart="true"
        android:layout_marginTop="0dp"
        android:layout_marginBottom="150dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="100dp"
            android:gravity="center_horizontal"
            android:orientation="vertical"
            android:background="@color/white"
            android:padding="24dp">

            <TableLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:stretchColumns="1">

                <TableRow>

                    <TextView
                        android:padding="8dp"
                        android:text="Name"
                        android:textSize="15dp"
                        android:textStyle="bold" />

                    <TextView
                        android:id="@+id/tvName"
                        android:padding="8dp"
                        android:textSize="15dp" />
                </TableRow>

                <TableRow>

                    <TextView
                        android:padding="8dp"
                        android:text="Email"
                        android:textSize="15dp"
                        android:textStyle="bold" />

                    <TextView
                        android:id="@+id/tvEmail"
                        android:padding="8dp"
                        android:textSize="15dp" />
                </TableRow>

                <TableRow>

                    <TextView
                        android:padding="8dp"
                        android:text="Nickname"
                        android:textSize="15dp"
                        android:textStyle="bold" />

                    <TextView
                        android:id="@+id/tvNickname"
                        android:padding="8dp"
                        android:textSize="15dp" />
                </TableRow>

                <TableRow>

                    <TextView
                        android:padding="8dp"
                        android:text="Phone Number"
                        android:textSize="15dp"
                        android:textStyle="bold" />

                    <TextView
                        android:id="@+id/tvPhoneNumber"
                        android:padding="8dp"
                        android:textSize="15dp" />
                </TableRow>

                <!-- Include additional rows for other user info as needed -->
            </TableLayout>

            <Button
                android:id="@+id/btnProfileEdit"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="12dp"
                android:layout_marginTop="16dp"
                android:background="@drawable/mypage_btn_selector"
                android:text="Profile Edit" />

        </LinearLayout>
    </ScrollView>

    <Button
        android:id="@+id/btnLogout"
        android:layout_width="100dp"
        android:layout_height="wrap_content"
        android:layout_above="@+id/navigation"
        android:layout_alignParentStart="true"
        android:layout_marginStart="70dp"
        android:layout_marginBottom="30dp"
        android:textSize="15dp"
        android:background="@drawable/mypage_btn_selector"
        android:text="Logout" />

    <Button
        android:id="@+id/btnDeleteAccount"
        android:layout_width="100dp"
        android:layout_height="wrap_content"
        android:layout_above="@+id/navigation"
        android:layout_alignParentEnd="true"
        android:layout_marginEnd="70dp"
        android:layout_marginBottom="30dp"
        android:textSize="15dp"
        android:background="@drawable/mypage_btn_selector"
        android:text="Delete Account" />

</RelativeLayout>


